    "sapphire",
    "paratime",
    "hardhat"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "src/"
  ],
  "scripts": {
    "lint": "prettier --cache --ignore-path .gitignore --check .",
