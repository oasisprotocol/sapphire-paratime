    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "~4.3.14",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.19.31",
    "chai": "~4.3.7",
    "ethers": "6.x",
    "hardhat": "2.x",
